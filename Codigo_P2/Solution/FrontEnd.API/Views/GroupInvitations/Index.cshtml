                    @Html.DisplayFor(modelItem => item.ToUserId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SentDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Accepted)
                </td>
